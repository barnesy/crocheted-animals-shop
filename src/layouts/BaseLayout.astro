---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Crocheted Animals - Handmade with Love',
  description = 'Beautiful handcrafted crocheted animals made with premium yarn. Perfect gifts and collectibles.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <meta name="generator" content={Astro.generator}>

  <!-- SEO Meta Tags -->
  <title>{title}</title>
  <meta name="description" content={description}>

  <!-- Open Graph / Social Media -->
  <meta property="og:type" content="website">
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@700&display=swap" rel="stylesheet">
</head>
<body class="min-h-screen flex flex-col bg-stone-50">
  <!-- Header/Navigation -->
  <header class="bg-white shadow-sm sticky top-0 z-50">
    <nav class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <a href="/" class="text-2xl font-bold font-serif text-rose-600">
          Crocheted Animals
        </a>
        <ul class="hidden md:flex items-center gap-8">
          <li><a href="/" class="text-stone-700 hover:text-rose-600 transition-colors">Home</a></li>
          <li><a href="/gallery" class="text-stone-700 hover:text-rose-600 transition-colors">Gallery</a></li>
          <li><a href="/custom-order" class="text-stone-700 hover:text-rose-600 transition-colors">Custom Orders</a></li>
          <li><a href="/about" class="text-stone-700 hover:text-rose-600 transition-colors">About</a></li>
          <li><a href="/contact" class="text-stone-700 hover:text-rose-600 transition-colors">Contact</a></li>
        </ul>
        <!-- Mobile menu button -->
        <button id="mobile-menu-button" class="md:hidden text-stone-700">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      <!-- Mobile menu -->
      <div id="mobile-menu" class="hidden md:hidden pt-4 pb-2">
        <ul class="flex flex-col gap-4">
          <li><a href="/" class="block text-stone-700 hover:text-rose-600 transition-colors">Home</a></li>
          <li><a href="/gallery" class="block text-stone-700 hover:text-rose-600 transition-colors">Gallery</a></li>
          <li><a href="/custom-order" class="block text-stone-700 hover:text-rose-600 transition-colors">Custom Orders</a></li>
          <li><a href="/about" class="block text-stone-700 hover:text-rose-600 transition-colors">About</a></li>
          <li><a href="/contact" class="block text-stone-700 hover:text-rose-600 transition-colors">Contact</a></li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- Main Content -->
  <main class="flex-1">
    <slot />
  </main>

  <!-- Footer -->
  <footer class="bg-white border-t border-stone-200 mt-16">
    <div class="container mx-auto px-4 py-8">
      <div class="grid md:grid-cols-3 gap-8">
        <div>
          <h3 class="font-bold text-lg mb-3 text-stone-800">About</h3>
          <p class="text-stone-600 text-sm">
            Handcrafted crocheted animals made with love and premium materials. Each piece is unique and made to order.
          </p>
        </div>
        <div>
          <h3 class="font-bold text-lg mb-3 text-stone-800">Quick Links</h3>
          <ul class="space-y-2 text-sm">
            <li><a href="/gallery" class="text-stone-600 hover:text-rose-600">Browse Gallery</a></li>
            <li><a href="/custom-order" class="text-stone-600 hover:text-rose-600">Custom Orders</a></li>
            <li><a href="/about" class="text-stone-600 hover:text-rose-600">About Us</a></li>
            <li><a href="/contact" class="text-stone-600 hover:text-rose-600">Contact</a></li>
          </ul>
        </div>
        <div>
          <h3 class="font-bold text-lg mb-3 text-stone-800">Contact</h3>
          <p class="text-stone-600 text-sm">
            Questions? We'd love to hear from you!<br>
            <a href="/contact" class="text-rose-600 hover:underline">Send us a message</a>
          </p>
        </div>
      </div>
      <div class="mt-8 pt-8 border-t border-stone-200 text-center text-sm text-stone-500">
        <p>&copy; {new Date().getFullYear()} Crocheted Animals. All rights reserved.</p>
      </div>
    </div>
  </footer>

  <!-- Mobile menu toggle script -->
  <script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');

    mobileMenuButton?.addEventListener('click', () => {
      mobileMenu?.classList.toggle('hidden');
    });
  </script>
</body>
</html>
