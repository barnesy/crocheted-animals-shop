---
import BaseLayout from '../layouts/BaseLayout.astro';
import ProductCard from '../components/ProductCard.astro';
import { getCollection } from 'astro:content';

const allProducts = await getCollection('products');
const featuredProducts = allProducts.filter(p => p.data.featured).slice(0, 3);
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-rose-50 via-pink-50 to-orange-50 py-20 md:py-32">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="font-serif text-5xl md:text-6xl lg:text-7xl font-bold text-stone-800 mb-6">
          Handcrafted with Love
        </h1>
        <p class="text-xl md:text-2xl text-stone-600 mb-8 leading-relaxed">
          Adorable crocheted animals made with premium yarn and endless care.
          Each piece is unique, huggable, and perfect for collectors of all ages.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/gallery"
            class="inline-block bg-rose-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-rose-700 transition-colors shadow-lg hover:shadow-xl"
          >
            Browse Gallery
          </a>
          <a
            href="/custom-order"
            class="inline-block bg-white text-rose-600 px-8 py-4 rounded-lg font-semibold hover:bg-stone-50 transition-colors shadow-lg hover:shadow-xl border-2 border-rose-600"
          >
            Custom Order
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-16 md:py-24 container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="font-serif text-4xl md:text-5xl font-bold text-stone-800 mb-4">
        Featured Creations
      </h2>
      <p class="text-lg text-stone-600 max-w-2xl mx-auto">
        Discover our most popular handcrafted companions. Each one is made to order with love and attention to detail.
      </p>
    </div>

    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
      {featuredProducts.map((product) => (
        <ProductCard
          name={product.data.name}
          price={product.data.price}
          image={product.data.images[0]}
          slug={product.slug}
          category={product.data.category}
          available={product.data.available}
        />
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/gallery"
        class="inline-block text-rose-600 hover:text-rose-700 font-semibold text-lg"
      >
        View All Products â†’
      </a>
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="bg-white py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="font-serif text-4xl md:text-5xl font-bold text-stone-800 mb-4">
          Why Choose Us
        </h2>
      </div>

      <div class="grid md:grid-cols-3 gap-12 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="w-16 h-16 bg-rose-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-xl mb-3 text-stone-800">Handmade with Love</h3>
          <p class="text-stone-600">
            Every piece is lovingly crafted by hand, ensuring unique character and quality in each creation.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-rose-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="font-bold text-xl mb-3 text-stone-800">Premium Materials</h3>
          <p class="text-stone-600">
            We use only high-quality yarns and hypoallergenic fillings, safe for all ages.
          </p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-rose-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
          </div>
          <h3 class="font-bold text-xl mb-3 text-stone-800">Customizable</h3>
          <p class="text-stone-600">
            Choose colors, sizes, and accessories to create the perfect companion for you or your loved ones.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 md:py-24 bg-gradient-to-br from-rose-600 to-pink-600 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="font-serif text-4xl md:text-5xl font-bold mb-6">
        Ready to Find Your Perfect Companion?
      </h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto opacity-95">
        Browse our full collection or request a custom design. We can't wait to create something special for you!
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="/gallery"
          class="inline-block bg-white text-rose-600 px-8 py-4 rounded-lg font-semibold hover:bg-stone-50 transition-colors shadow-lg hover:shadow-xl"
        >
          Shop Now
        </a>
        <a
          href="/custom-order"
          class="inline-block bg-transparent text-white px-8 py-4 rounded-lg font-semibold hover:bg-white/10 transition-colors border-2 border-white"
        >
          Custom Order
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
